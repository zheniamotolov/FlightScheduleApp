<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                 
                            
                             
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:orientation="vertical" android:tag="layout/fragment_search_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/loading_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/loading_airports"
            android:textAlignment="center"
            android:tag="binding_1"       />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/airports_list"
            android:contentDescription="@string/cd_airports_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            android:tag="binding_2"        />

    </LinearLayout>
         