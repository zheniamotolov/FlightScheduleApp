<?xml version="1.0" encoding="utf-8"?>

                                                        
    
                                          
                 
                            
                             

                 
                                           
                                                                                         
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:orientation="vertical" android:tag="layout/fragment_airport_schedule_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            layout="@layout/airport_item"
                                                             />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/loading_tv"
                android:text="Loading schedule"
                android:tag="binding_1"       />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/flight_list_wrapper">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/flight_list"
                    android:contentDescription="schedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="LinearLayoutManager"
                    android:tag="binding_2"        />
            </FrameLayout>
        </FrameLayout>


    </LinearLayout>
         